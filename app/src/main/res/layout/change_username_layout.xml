<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.ChangeUsernameActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activityChangeUsernameHeader"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background">

        <ImageView
            android:id="@+id/activityChangeUsernameButtonBack"
            android:layout_width="@dimen/buttons_size"
            android:layout_height="@dimen/buttons_size"
            android:src="@drawable/back_ui"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/title_fragment"
            android:id="@+id/activityChangeUsernameTitle"
            android:text="@string/new_nickname"/>

        <ImageView
            android:id="@+id/activityChangeUsernameButtonCheck"
            android:layout_width="@dimen/buttons_size"
            android:layout_height="@dimen/buttons_size"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/marginEnd_normal"
            android:src="@drawable/check_ui" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        style="@style/edit_text"
        android:id="@+id/activityChangeUsernameNew"
        android:layout_below="@id/activityChangeUsernameHeader"/>
    <TextView
        style="@style/text_hint"
        android:gravity="center"
        android:id="@+id/activityChangeUsernameCount"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activityChangeUsernameNew"/>
</RelativeLayout>