<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background"
        android:padding="@dimen/padding_normal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userImageProfile"
            android:layout_width="@dimen/userProfileImage_size"
            android:layout_height="@dimen/userProfileImage_size"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/small"
            android:layout_toEndOf="@id/userImageProfile">

            <TextView
                android:fontFamily="@font/moscowsansregular"
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_normal"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/moscowsansregular"
                android:id="@+id/userPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/textSize_small" />

            <ImageView
                android:id="@+id/userKickFromChannel"
                android:layout_width="@dimen/buttons_size"
                android:layout_height="@dimen/buttons_size"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/normal"
                android:src="@drawable/exit_ui" />
            <ImageView
                android:id="@+id/userSetAdmin"
                android:layout_width="@dimen/buttons_size"
                android:layout_height="@dimen/buttons_size"
                android:layout_toLeftOf="@+id/userKickFromChannel"
                android:layout_marginEnd="@dimen/normal"
                android:src="@drawable/panel_settings_ui" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>