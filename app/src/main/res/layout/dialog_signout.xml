<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/showDialogSignOutCardView"
        android:layout_width="@dimen/showDialogSignOutCardView_size"
        android:layout_height="@dimen/showDialogSignOutCardView_size"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    style="@style/title_fragment"
                    android:id="@+id/showDialogSignOutTitle"
                    android:gravity="center"
                    android:text="@string/you_sure_you_want_to_sign_out" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/showDialogSignOutButtonYes"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/showDialogSignOutTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/marginTop_large"
                    android:background="@drawable/grey_button_ux"
                    android:text="@string/yes_i_am_sure" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>