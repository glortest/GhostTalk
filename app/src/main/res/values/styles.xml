<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_fragment" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:fontFamily">@font/moscowsansregular</item>
    </style>


    <style name="text_hint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:fontFamily">@font/moscowsansregular</item>
    </style>

    <style name="text_user" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:fontFamily">@font/moscowsansregular</item>
    </style>

    <style name="edit_text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">@dimen/marginStart_normal</item>
        <item name="android:layout_marginTop">@dimen/marginTop_normal</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd_normal</item>
        <item name="android:background">@drawable/background_edit</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:fontFamily">@font/moscowsansregular</item>
    </style>

    <style name="orange_button" parent="TextAppearance.AppCompat">
        <item name="background">@drawable/orange_button_ux</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/moscowsansregular</item>
    </style>



</resources>